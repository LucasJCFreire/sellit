{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "always"
		}
	},
	"files": {
		"ignore": ["./.next", "./node_modules"]
	}
}
